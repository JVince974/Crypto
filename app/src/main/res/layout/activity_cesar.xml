<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.vincent.crypto.MyActivities.CesarActivity">


    <Button
        android:id="@+id/btnMinus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="43dp"
        android:onClick="minus"
        android:text="-" />

    <EditText
        android:id="@+id/edtDecalage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/btnPlus"
        android:layout_toEndOf="@+id/btnMinus"
        android:ems="10"
        android:hint="Décalage"
        android:inputType="number"
        android:singleLine="true" />

    <Button
        android:id="@+id/btnPlus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btnMinus"
        android:layout_alignBottom="@+id/btnMinus"
        android:layout_alignParentEnd="true"
        android:onClick="plus"
        android:text="+" />

    <Button
        android:id="@+id/btnCrypter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="167dp"
        android:layout_marginStart="48dp"
        android:onClick="crypt"
        android:text="Crypter" />

    <Button
        android:id="@+id/btnDecrypter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btnCrypter"
        android:layout_alignBottom="@+id/btnCrypter"
        android:layout_marginEnd="21dp"
        android:layout_toStartOf="@+id/btnPlus"
        android:onClick="decrypt"
        android:text="Décrypter" />

    <EditText
        android:id="@+id/edtMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/edtDecalage"
        android:layout_marginStart="16dp"
        android:layout_marginTop="36dp"
        android:ems="10"
        android:hint="Message"
        android:inputType="text" />

    <TextView
        android:id="@+id/tvResponse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/btnCrypter"
        android:layout_below="@+id/btnDecrypter"
        android:layout_marginTop="56dp" />


